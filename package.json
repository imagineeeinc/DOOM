{
  "name": "DOOM",
  "version": "1.0.0",
  "description": "A powerfully small terminal emulator, THE TERMINAL OF DOOM",
  "main": "application.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "cd .\\node_modules\\node-pty && node-gyp rebuild --target=10.1.5 --arch=x64 --target_platform=darwin --dist-url=https://atom.io/download/atom-shell",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-win-32": "electron-builder --win --ia32",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imagineeeinc/DOOM.git"
  },
  "keywords": [
    "notepad"
  ],
  "author": "imagineee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imagineeeinc/DOOM/issues"
  },
  "homepage": "https://github.com/imagineeeinc/DOOM",
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "appId": "DOOM",
    "productName": "DOOM",
    "copyright": "Copyright Â© 2021 Imagineee",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "default",
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "portable",
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "apk",
        "zip",
        "deb",
        "rpm"
      ]
    }
  },
  "dependencies": {
    "dotenv": "^8.6.0",
    "ejs": "^3.1.6",
    "electron-reload": "^1.5.0",
    "express": "^4.17.1",
    "node-pty": "^0.10.1",
    "socket.io": "^4.1.2",
    "xterm": "^4.12.0",
    "xterm-addon-fit": "^0.5.0"
  },
  "extra-notes": [
    "npm i -g felixrieseberg/windows-build-tools to install with altest version of python",
    "npm rebuild --runtime=electron --target=1.1.3 --disturl=https://atom.io/download/atom-shell --abi=72 for rebuild from official robotjs",
    "https://github.com/octalmage/robotjs/issues/594 to build"
  ]
}
